<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Modifier l'Offre d'Emploi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #4361ee;
      --secondary: #3f37c9;
      --accent: #4895ef;
      --light: #f8f9fa;
      --dark: #212529;
      --card-bg: #ffffff;
      --success: #38b000;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: linear-gradient(135deg, #f0f4f8 0%, #e6f0ff 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      color: #2d3748;
    }
    
    .edit-container {
      max-width: 700px;
      width: 100%;
    }
    
    .edit-card {
      background: var(--card-bg);
      border-radius: 18px;
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
      overflow: hidden;
      padding: 40px;
      position: relative;
      z-index: 1;
      border: 1px solid rgba(0, 0, 0, 0.05);
      animation: fadeIn 0.8s ease-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .edit-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 6px;
      background: linear-gradient(to right, var(--primary), var(--secondary));
      z-index: 2;
    }
    
    .header-title {
      color: var(--primary);
      font-weight: 700;
      margin-bottom: 35px;
      position: relative;
      padding-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .header-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 70px;
      height: 4px;
      background: var(--accent);
      border-radius: 4px;
    }
    
    .form-group {
      margin-bottom: 30px;
      position: relative;
    }
    
    .form-label {
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 12px;
      display: block;
      position: relative;
      padding-left: 30px;
    }
    
    .form-label i {
      position: absolute;
      left: 0;
      top: 0;
      color: var(--accent);
      font-size: 1.2rem;
    }
    
    .form-control {
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      padding: 14px 18px;
      font-size: 1rem;
      transition: all 0.3s;
      width: 100%;
      background: #f8fafc;
    }
    
    .form-control:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.15);
      background: white;
      outline: none;
    }
    
    textarea.form-control {
      min-height: 180px;
      resize: vertical;
    }
    
    .btn-container {
      display: flex;
      gap: 15px;
      margin-top: 40px;
      flex-wrap: wrap;
    }
    
    .btn-save {
      background: linear-gradient(to right, var(--primary), var(--secondary));
      border: none;
      padding: 14px 35px;
      font-weight: 600;
      border-radius: 12px;
      transition: all 0.3s;
      box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
      color: white;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 1.1rem;
    }
    
    .btn-save:hover {
      transform: translateY(-3px);
      box-shadow: 0 7px 20px rgba(0, 0, 0, 0.2);
    }
    
    .btn-cancel {
      background: linear-gradient(to right, #6c757d, #5a6268);
      border: none;
      padding: 14px 35px;
      font-weight: 600;
      border-radius: 12px;
      transition: all 0.3s;
      color: white;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 1.1rem;
    }
    
    .btn-cancel:hover {
      transform: translateY(-3px);
      box-shadow: 0 7px 20px rgba(0, 0, 0, 0.2);
    }
    
    .form-icon {
      position: absolute;
      right: 15px;
      top: 40px;
      color: #94a3b8;
      font-size: 1.2rem;
      transition: color 0.3s;
    }
    
    .form-group:focus-within .form-icon {
      color: var(--accent);
    }
    
    .tag-container {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: 10px;
    }
    
    .tag {
      background: rgba(72, 149, 239, 0.15);
      color: var(--primary);
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 5px;
    }
    
    .tag i {
      font-size: 0.7rem;
      cursor: pointer;
    }
    
    .info-box {
      background: rgba(72, 149, 239, 0.1);
      border-radius: 12px;
      padding: 20px;
      margin-top: 20px;
      display: flex;
      gap: 15px;
      border-left: 4px solid var(--accent);
    }
    
    .info-box i {
      color: var(--accent);
      font-size: 1.5rem;
      flex-shrink: 0;
    }
    
    .info-box p {
      margin: 0;
      color: #4a5568;
    }
    
    @media (max-width: 768px) {
      .edit-card {
        padding: 30px 20px;
      }
      
      .header-title {
        font-size: 1.6rem;
      }
      
      .btn-container {
        flex-direction: column;
        gap: 12px;
      }
      
      .btn-save, .btn-cancel {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <div class="edit-container">
    <div class="edit-card">
      <h1 class="header-title"><i class="fas fa-edit"></i> Modifier l'Offre d'Emploi</h1>
      
      <form action="/offres/<%= offre.id %>?_method=PUT" method="POST" id="editForm">
        <div class="form-group">
          <label for="titre" class="form-label">
            <i class="fas fa-heading"></i> Titre
          </label>
          <div class="position-relative">
            <input type="text" id="titre" name="titre" value="<%= offre.titre %>" class="form-control" required>
            <span class="form-icon"><i class="fas fa-pen"></i></span>
          </div>
        </div>

        <div class="form-group">
          <label for="description" class="form-label">
            <i class="fas fa-align-left"></i> Description
          </label>
          <div class="position-relative">
            <textarea id="description" name="description" class="form-control" rows="5" required><%= offre.description %></textarea>
            <span class="form-icon"><i class="fas fa-file-alt"></i></span>
          </div>
        </div>

        <div class="form-group">
          <label for="localisation" class="form-label">
            <i class="fas fa-map-marker-alt"></i> Localisation
          </label>
          <div class="position-relative">
            <input type="text" id="localisation" name="localisation" value="<%= offre.localisation %>" class="form-control" required>
            <span class="form-icon"><i class="fas fa-location-dot"></i></span>
          </div>
        </div>

        <div class="form-group">
          <label for="mots_cles" class="form-label">
            <i class="fas fa-tags"></i> Mots-clés
          </label>
          <div class="position-relative">
            <input type="text" id="mots_cles" name="mots_cles" value="<%= offre.mots_cles %>" class="form-control" placeholder="Séparez par des virgules">
            <span class="form-icon"><i class="fas fa-hashtag"></i></span>
          </div>
          <div class="tag-container" id="tagPreview"></div>
        </div>

        <div class="info-box">
          <i class="fas fa-lightbulb"></i>
          <p>
            <strong>Conseil :</strong> Utilisez des mots-clés pertinents et spécifiques pour améliorer la visibilité de votre offre. 
            Les candidats utilisent ces mots pour rechercher des opportunités correspondant à leurs compétences.
          </p>
        </div>

        <div class="btn-container">
          <button type="submit" class="btn-save">
            <i class="fas fa-save"></i> Enregistrer les modifications
          </button>
          <a href="/offres" class="btn-cancel">
            <i class="fas fa-times"></i> Annuler
          </a>
        </div>
      </form>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Prévisualisation des mots-clés
      const keywordsInput = document.getElementById('mots_cles');
      const tagPreview = document.getElementById('tagPreview');
      
      function updateTagPreview() {
        const tags = keywordsInput.value.split(',').filter(tag => tag.trim() !== '');
        tagPreview.innerHTML = '';
        
        tags.forEach(tag => {
          const tagElement = document.createElement('span');
          tagElement.className = 'tag';
          tagElement.innerHTML = `<i class="fas fa-tag"></i> ${tag.trim()}`;
          tagPreview.appendChild(tagElement);
        });
      }
      
      // Initialiser avec les mots-clés existants
      updateTagPreview();
      
      // Mettre à jour à chaque changement
      keywordsInput.addEventListener('input', updateTagPreview);
      
      // Validation du formulaire
      const form = document.getElementById('editForm');
      form.addEventListener('submit', function(e) {
        let valid = true;
        const requiredFields = form.querySelectorAll('[required]');
        
        requiredFields.forEach(field => {
          if (!field.value.trim()) {
            field.style.borderColor = '#e53e3e';
            field.nextElementSibling.style.color = '#e53e3e';
            valid = false;
          }
        });
        
        if (!valid) {
          e.preventDefault();
          showError('Veuillez remplir tous les champs obligatoires');
        }
      });
      
      function showError(message) {
        const errorElement = document.createElement('div');
        errorElement.innerHTML = `<i class="fas fa-exclamation-circle me-2"></i> ${message}`;
        errorElement.style.position = 'fixed';
        errorElement.style.top = '20px';
        errorElement.style.left = '50%';
        errorElement.style.transform = 'translateX(-50%)';
        errorElement.style.backgroundColor = '#fff5f5';
        errorElement.style.color = '#e53e3e';
        errorElement.style.padding = '15px 25px';
        errorElement.style.borderRadius = '8px';
        errorElement.style.boxShadow = '0 4px 12px rgba(0,0,0,0.1)';
        errorElement.style.zIndex = '1000';
        errorElement.style.fontWeight = '600';
        errorElement.style.display = 'flex';
        errorElement.style.alignItems = 'center';
        errorElement.style.animation = 'fadeIn 0.3s ease';
        
        document.body.appendChild(errorElement);
        
        setTimeout(() => {
          errorElement.style.animation = 'fadeOut 0.5s ease';
          setTimeout(() => {
            document.body.removeChild(errorElement);
          }, 500);
        }, 3000);
      }
      
      // Réinitialiser les styles d'erreur lors de la saisie
      const inputs = form.querySelectorAll('input, textarea');
      inputs.forEach(input => {
        input.addEventListener('input', function() {
          if (this.style.borderColor === 'rgb(229, 62, 62)') {
            this.style.borderColor = '#e2e8f0';
            if (this.nextElementSibling) {
              this.nextElementSibling.style.color = '#94a3b8';
            }
          }
        });
      });
    });
  </script>
</body>
</html>