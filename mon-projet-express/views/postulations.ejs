<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Mes Postulations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    :root {
      --primary: #4361ee;
      --secondary: #3f37c9;
      --accent: #4895ef;
      --light: #f8f9fa;
      --dark: #212529;
      --success: #4cc9f0;
      --card-bg: #ffffff;
      --postulation: #7209b7;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: linear-gradient(135deg, #f0f4f8 0%, #e6f0ff 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
      color: #2d3748;
    }
    
    .container {
      max-width: 900px;
      margin: 40px auto;
    }
    
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid rgba(0,0,0,0.1);
    }
    
    .header-actions {
      display: flex;
      gap: 15px;
    }
    
    h2 {
      color: var(--primary);
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .btn-add {
      background: linear-gradient(to right, var(--primary), var(--secondary));
      border: none;
      padding: 10px 20px;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s;
      box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
      display: flex;
      align-items: center;
      gap: 8px;
      color: white;
      text-decoration: none;
    }
    
    .btn-postulations {
      background: linear-gradient(to right, var(--postulation), #560bad);
      border: none;
      padding: 10px 20px;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s;
      box-shadow: 0 4px 15px rgba(114, 9, 183, 0.3);
      display: flex;
      align-items: center;
      gap: 8px;
      color: white;
      text-decoration: none;
    }
    
    .btn-add:hover, .btn-postulations:hover {
      transform: translateY(-2px);
      box-shadow: 0 7px 20px rgba(67, 97, 238, 0.4);
      color: white;
    }
    
    .btn-postulations:hover {
      box-shadow: 0 7px 20px rgba(114, 9, 183, 0.4);
    }
    
    .no-postulations {
      background: white;
      border-radius: 12px;
      padding: 40px 20px;
      text-align: center;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      margin-top: 20px;
      font-size: 18px;
      color: #718096;
    }
    
    .postulation-list {
      display: grid;
      gap: 20px;
      margin-top: 30px;
    }
    
    .postulation-card {
      background: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: none;
    }
    
    .postulation-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    .postulation-header {
      padding: 20px;
      border-bottom: 1px solid rgba(0,0,0,0.05);
      background: linear-gradient(to right, rgba(67, 97, 238, 0.03), rgba(63, 55, 201, 0.03));
    }
    
    .postulation-title {
      color: var(--dark);
      font-size: 1.4rem;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .postulation-title i {
      color: var(--primary);
      font-size: 1.2rem;
    }
    
    .postulation-description {
      color: #4a5568;
      line-height: 1.6;
      margin-bottom: 15px;
    }
    
    .postulation-details {
      padding: 20px;
      background: #f9fafb;
    }
    
    .detail-item {
      display: flex;
      margin-bottom: 12px;
      font-size: 0.95rem;
    }
    
    .detail-item i {
      color: var(--accent);
      width: 24px;
      margin-right: 10px;
    }
    
    .postulation-footer {
      display: flex;
      justify-content: space-between;
      padding: 15px 20px;
      background: rgba(0,0,0,0.02);
      border-top: 1px solid rgba(0,0,0,0.05);
    }
    
    .postulation-date {
      color: #718096;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    .status-badge {
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
    }
    
    .status-pending {
      background: rgba(255, 193, 7, 0.15);
      color: #ffc107;
    }
    
    .status-reviewed {
      background: rgba(23, 162, 184, 0.15);
      color: #17a2b8;
    }
    
    .status-accepted {
      background: rgba(40, 167, 69, 0.15);
      color: #28a745;
    }
    
    .status-rejected {
      background: rgba(220, 53, 69, 0.15);
      color: #dc3545;
    }
    
    @media (max-width: 768px) {
      .postulation-footer {
        flex-direction: column;
        gap: 15px;
      }
      
      .header-actions {
        flex-direction: column;
        width: 100%;
        margin-top: 15px;
      }
      
      header {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h2><i class="fas fa-list-check"></i> Mes postulations</h2>
      <div class="header-actions">
        <a href="/offres" class="btn-add">
          <i class="fas fa-briefcase"></i> Voir les offres
        </a>
        <a href="/dashboard" class="btn-postulations">
          <i class="fas fa-tachometer-alt"></i> Tableau de bord
        </a>
      </div>
    </header>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle"></i> <%= error %>
      </div>
    <% } %>

    <% if (typeof postulations !== 'undefined' && postulations.length === 0) { %>
      <div class="no-postulations">
        <i class="fas fa-file-alt fa-3x mb-3" style="color: #a0aec0;"></i>
        <p>Vous n'avez postulé à aucune offre pour le moment.</p>
        <a href="/offres" class="btn-add mt-3">Parcourir les offres</a>
      </div>
    <% } else { %>
      <div class="postulation-list">
        <% postulations.forEach(postulation => { %>
          <div class="postulation-card">
            <div class="postulation-header">
              <h3 class="postulation-title"><i class="fas fa-briefcase"></i> <%= postulation.offre_titre %></h3>
              <p class="postulation-description"><%= postulation.message %></p>
            </div>
            
            <div class="postulation-details">
              <div class="detail-item">
                <i class="fas fa-map-marker-alt"></i>
                <strong>Localisation :</strong> <%= postulation.offre_localisation %>
              </div>
              
              <div class="detail-item">
                <i class="fas fa-calendar-alt"></i>
                <strong>Date de postulation :</strong> 
                <% if (postulation.date_postulation) { %>
                  <%= new Date(postulation.date_postulation).toLocaleDateString('fr-FR', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                  }) %>
                <% } else { %>
                  Non spécifiée
                <% } %>
              </div>
              
              <div class="detail-item">
                <i class="fas fa-user"></i>
                <strong>Votre identifiant :</strong> <%= postulation.username %>
              </div>
            </div>
            
            <div class="postulation-footer">
              <div class="postulation-date">
                <i class="fas fa-clock"></i> 
                Postulé 
                <% if (postulation.date_postulation) { %>
                  <% const postulationDate = new Date(postulation.date_postulation); %>
                  <% const now = new Date(); %>
                  <% const diffTime = Math.abs(now - postulationDate); %>
                  <% const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24)); %>
                  
                  <% if (diffDays === 0) { %>
                    aujourd'hui
                  <% } else if (diffDays === 1) { %>
                    hier
                  <% } else { %>
                    il y a <%= diffDays %> jours
                  <% } %>
                <% } %>
              </div>
              
              <div>
                <% let statusClass = 'status-pending'; %>
                <% let statusText = 'En attente'; %>
                
                <% if (postulation.status) { %>
                  <% if (postulation.status === 'reviewed') { %>
                    <% statusClass = 'status-reviewed'; %>
                    <% statusText = 'En cours d\'examen'; %>
                  <% } else if (postulation.status === 'accepted') { %>
                    <% statusClass = 'status-accepted'; %>
                    <% statusText = 'Acceptée'; %>
                  <% } else if (postulation.status === 'rejected') { %>
                    <% statusClass = 'status-rejected'; %>
                    <% statusText = 'Refusée'; %>
                  <% } %>
                <% } %>
                
                <span class="status-badge <%= statusClass %>">
                  <i class="fas fa-circle"></i> <%= statusText %>
                </span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
  
  <script>
    // Animation au chargement de la page
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.postulation-card');
      cards.forEach((card, index) => {
        setTimeout(() => {
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, 150 * index);
      });
    });
  </script>
</body>
</html>