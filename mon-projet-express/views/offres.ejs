<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Liste des Offres d'emploi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    :root {
      --primary: #4361ee;
      --secondary: #3f37c9;
      --accent: #4895ef;
      --light: #f8f9fa;
      --dark: #212529;
      --success: #4cc9f0;
      --card-bg: #ffffff;
      --postulation: #7209b7;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: linear-gradient(135deg, #f0f4f8 0%, #e6f0ff 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
      color: #2d3748;
    }
    
    .container {
      max-width: 900px;
      margin: 40px auto;
    }
    
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid rgba(0,0,0,0.1);
    }
    
    .header-actions {
      display: flex;
      gap: 15px;
    }
    
    h2 {
      color: var(--primary);
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .btn-add {
      background: linear-gradient(to right, var(--primary), var(--secondary));
      border: none;
      padding: 10px 20px;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s;
      box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
      display: flex;
      align-items: center;
      gap: 8px;
      color: white;
      text-decoration: none;
    }
    
    .btn-postulations {
      background: linear-gradient(to right, var(--postulation), #560bad);
      border: none;
      padding: 10px 20px;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s;
      box-shadow: 0 4px 15px rgba(114, 9, 183, 0.3);
      display: flex;
      align-items: center;
      gap: 8px;
      color: white;
      text-decoration: none;
    }
    
    .btn-add:hover, .btn-postulations:hover {
      transform: translateY(-2px);
      box-shadow: 0 7px 20px rgba(67, 97, 238, 0.4);
      color: white;
    }
    
    .btn-postulations:hover {
      box-shadow: 0 7px 20px rgba(114, 9, 183, 0.4);
    }
    
    .no-offers {
      background: white;
      border-radius: 12px;
      padding: 40px 20px;
      text-align: center;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      margin-top: 20px;
      font-size: 18px;
      color: #718096;
    }
    
    .offer-list {
      display: grid;
      gap: 20px;
      margin-top: 30px;
    }
    
    .offer-card {
      background: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: none;
    }
    
    .offer-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
    
    .offer-header {
      padding: 20px;
      border-bottom: 1px solid rgba(0,0,0,0.05);
      background: linear-gradient(to right, rgba(67, 97, 238, 0.03), rgba(63, 55, 201, 0.03));
    }
    
    .offer-title {
      color: var(--dark);
      font-size: 1.4rem;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .offer-title i {
      color: var(--primary);
      font-size: 1.2rem;
    }
    
    .offer-description {
      color: #4a5568;
      line-height: 1.6;
      margin-bottom: 15px;
    }
    
    .offer-details {
      padding: 20px;
      background: #f9fafb;
    }
    
    .detail-item {
      display: flex;
      margin-bottom: 12px;
      font-size: 0.95rem;
    }
    
    .detail-item i {
      color: var(--accent);
      width: 24px;
      margin-right: 10px;
    }
    
    .tag-container {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: 15px;
    }
    
    .tag {
      background: rgba(72, 149, 239, 0.15);
      color: var(--primary);
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
    }
    
    .offer-footer {
      display: flex;
      justify-content: space-between;
      padding: 15px 20px;
      background: rgba(0,0,0,0.02);
      border-top: 1px solid rgba(0,0,0,0.05);
    }
    
    .action-buttons {
      display: flex;
      gap: 12px;
    }
    
    .btn-edit {
      background: linear-gradient(to right, #4cc9f0, #4895ef);
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      color: white;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 6px;
      transition: all 0.3s;
      text-decoration: none;
    }
    
    .btn-delete {
      background: linear-gradient(to right, #f72585, #b5179e);
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      color: white;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 6px;
      transition: all 0.3s;
    }
    
    .btn-edit:hover, .btn-delete:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }
    
    .publish-date {
      color: #718096;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    @media (max-width: 768px) {
      .offer-footer {
        flex-direction: column;
        gap: 15px;
      }
      
      .action-buttons {
        width: 100%;
        justify-content: center;
      }
      
      .header-actions {
        flex-direction: column;
        width: 100%;
        margin-top: 15px;
      }
      
      header {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h2><i class="fas fa-bullhorn"></i> Offres d'emploi disponibles</h2>
      <div class="header-actions">
        <a href="/postulations" class="btn-postulations">
          <i class="fas fa-list-check"></i> Mes postulations
        </a>
        <a href="/offres/new" class="btn-add">
          <i class="fas fa-plus"></i> Ajouter une nouvelle offre
        </a>
      </div>
    </header>

    <% if (offres.length === 0) { %>
      <div class="no-offers">
        <i class="fas fa-file-alt fa-3x mb-3" style="color: #a0aec0;"></i>
        <p>Aucune offre disponible pour le moment.</p>
      </div>
    <% } else { %>
      <div class="offer-list">
        <% offres.forEach(offre => { %>
          <div class="offer-card">
            <div class="offer-header">
              <h3 class="offer-title"><i class="fas fa-briefcase"></i> <%= offre.titre %></h3>
              <p class="offer-description"><%= offre.description %></p>
            </div>
            
            <div class="offer-details">
              <div class="detail-item">
                <i class="fas fa-map-marker-alt"></i>
                <strong>Localisation :</strong> <%= offre.localisation %>
              </div>
              
              <div class="detail-item">
                <i class="fas fa-calendar-alt"></i>
                <strong>Publié le :</strong> <%= offre.date_publication %>
              </div>
              
              <div class="tag-container">
                <% offre.mots_cles.split(',').forEach(tag => { %>
                  <span class="tag"><%= tag.trim() %></span>
                <% }) %>
              </div>
            </div>
            
            <div class="offer-footer">
              <div class="publish-date">
                <i class="fas fa-clock"></i> Publié il y a 2 jours
              </div>
              
              <div class="action-buttons">
                <a href="/offres/<%= offre.id %>/edit" class="btn-edit">
                  <i class="fas fa-edit"></i> Modifier
                </a>
                
                <form action="/offres/<%= offre.id %>" method="POST">
                  <button type="submit" class="btn-delete">
                    <i class="fas fa-trash"></i> Supprimer
                  </button>
                </form>
                
                <a href="/offres/<%= offre.id %>/postuler" class="btn-edit" style="background: linear-gradient(to right, #38b000, #2d7d46);">
                  <i class="fas fa-paper-plane"></i> Postuler
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
  
  <script>
    // Animation au chargement de la page
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.offer-card');
      cards.forEach((card, index) => {
        setTimeout(() => {
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, 150 * index);
      });
    });
  </script>
</body>
</html>