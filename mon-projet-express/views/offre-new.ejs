<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Créer une Offre d'emploi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    :root {
      --primary: #4361ee;
      --secondary: #3f37c9;
      --accent: #4895ef;
      --light: #f8f9fa;
      --dark: #212529;
      --success: #38b000;
      --card-bg: #ffffff;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: linear-gradient(135deg, #f0f4f8 0%, #e6f0ff 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
      color: #2d3748;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .container {
      max-width: 800px;
      width: 100%;
      margin: 0 auto;
    }
    
    .form-card {
      background: var(--card-bg);
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
      overflow: hidden;
      padding: 40px;
      position: relative;
      z-index: 1;
      border: 1px solid rgba(0, 0, 0, 0.05);
      animation: fadeIn 0.8s ease-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .form-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 6px;
      background: linear-gradient(to right, var(--primary), var(--secondary));
      z-index: 2;
    }
    
    .header-title {
      color: var(--primary);
      font-weight: 700;
      margin-bottom: 35px;
      position: relative;
      padding-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .header-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 70px;
      height: 4px;
      background: var(--accent);
      border-radius: 4px;
    }
    
    .form-group {
      margin-bottom: 25px;
      position: relative;
    }
    
    .form-label {
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 10px;
      display: block;
      position: relative;
      padding-left: 30px;
    }
    
    .form-label i {
      position: absolute;
      left: 0;
      top: 0;
      color: var(--accent);
      font-size: 1.2rem;
    }
    
    .form-control {
      border: 2px solid #e2e8f0;
      border-radius: 10px;
      padding: 14px 18px;
      font-size: 1rem;
      transition: all 0.3s;
      width: 100%;
      background: #f8fafc;
    }
    
    .form-control:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.15);
      background: white;
      outline: none;
    }
    
    textarea.form-control {
      min-height: 150px;
      resize: vertical;
    }
    
    .btn-container {
      display: flex;
      gap: 15px;
      margin-top: 30px;
      flex-wrap: wrap;
    }
    
    .btn-primary {
      background: linear-gradient(to right, var(--primary), var(--secondary));
      border: none;
      padding: 14px 35px;
      font-weight: 600;
      border-radius: 10px;
      transition: all 0.3s;
      box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
      color: white;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 1.1rem;
    }
    
    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 7px 20px rgba(0, 0, 0, 0.2);
    }
    
    .form-icon {
      position: absolute;
      right: 15px;
      top: 40px;
      color: #94a3b8;
      font-size: 1.2rem;
      transition: color 0.3s;
    }
    
    .form-group:focus-within .form-icon {
      color: var(--accent);
    }
    
    .info-tip {
      background: rgba(72, 149, 239, 0.1);
      border-radius: 8px;
      padding: 15px;
      margin-top: 25px;
      display: flex;
      gap: 12px;
      border-left: 4px solid var(--accent);
    }
    
    .info-tip i {
      color: var(--accent);
      font-size: 1.4rem;
      flex-shrink: 0;
    }
    
    .info-tip p {
      margin: 0;
      color: #4a5568;
      font-size: 0.95rem;
    }
    
    .tag-preview {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: 10px;
    }
    
    .tag {
      background: rgba(72, 149, 239, 0.15);
      color: var(--primary);
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 5px;
    }
    
    .tag i {
      font-size: 0.7rem;
    }
    
    @media (max-width: 768px) {
      .form-card {
        padding: 30px 20px;
      }
      
      .btn-container {
        justify-content: center;
      }
      
      .btn-primary {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-card">
      <h2 class="header-title"><i class="fas fa-plus-circle"></i> Nouvelle Offre d'emploi</h2>

      <form action="/offres/new" method="POST" id="offerForm">
        <div class="form-group">
          <label for="titre" class="form-label">
            <i class="fas fa-heading"></i> Titre de l'offre
          </label>
          <div class="position-relative">
            <input type="text" name="titre" class="form-control" id="titre" required />
            <span class="form-icon"><i class="fas fa-pen"></i></span>
          </div>
        </div>

        <div class="form-group">
          <label for="description" class="form-label">
            <i class="fas fa-align-left"></i> Description
          </label>
          <div class="position-relative">
            <textarea name="description" class="form-control" id="description" rows="5" required></textarea>
            <span class="form-icon"><i class="fas fa-file-alt"></i></span>
          </div>
        </div>

        <div class="form-group">
          <label for="localisation" class="form-label">
            <i class="fas fa-map-marker-alt"></i> Localisation
          </label>
          <div class="position-relative">
            <input type="text" name="localisation" class="form-control" id="localisation" required />
            <span class="form-icon"><i class="fas fa-location-dot"></i></span>
          </div>
        </div>

        <div class="form-group">
          <label for="mots_cles" class="form-label">
            <i class="fas fa-tags"></i> Mots-clés
          </label>
          <div class="position-relative">
            <input type="text" name="mots_cles" class="form-control" id="mots_cles" placeholder="Séparez par des virgules" />
            <span class="form-icon"><i class="fas fa-hashtag"></i></span>
          </div>
          <div class="tag-preview" id="tagPreview"></div>
          <small class="form-text text-muted">Exemple : JavaScript, Node.js, SQL</small>
        </div>

        <div class="info-tip">
          <i class="fas fa-lightbulb"></i>
          <p>Rédigez une description claire et précise. Les candidats qualifiés seront attirés par une offre bien rédigée qui décrit précisément les responsabilités et compétences requises.</p>
        </div>

        <div class="btn-container">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Publier l'offre
          </button>
        </div>
      </form>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Prévisualisation des mots-clés
      const keywordsInput = document.getElementById('mots_cles');
      const tagPreview = document.getElementById('tagPreview');
      
      keywordsInput.addEventListener('input', function() {
        const tags = this.value.split(',').filter(tag => tag.trim() !== '');
        tagPreview.innerHTML = '';
        
        tags.forEach(tag => {
          const tagElement = document.createElement('span');
          tagElement.className = 'tag';
          tagElement.innerHTML = `<i class="fas fa-tag"></i> ${tag.trim()}`;
          tagPreview.appendChild(tagElement);
        });
      });
      
      // Animation au focus des champs
      const inputs = document.querySelectorAll('.form-control');
      inputs.forEach(input => {
        input.addEventListener('focus', function() {
          this.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', function() {
          this.parentElement.classList.remove('focused');
        });
      });
      
      // Validation du formulaire
      const form = document.getElementById('offerForm');
      form.addEventListener('submit', function(e) {
        let valid = true;
        
        inputs.forEach(input => {
          if (input.hasAttribute('required') && !input.value.trim()) {
            input.style.borderColor = '#e53e3e';
            input.nextElementSibling.style.color = '#e53e3e';
            valid = false;
          }
        });
        
        if (!valid) {
          e.preventDefault();
          // Animation d'erreur
          const errorElement = document.createElement('div');
          errorElement.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i> Veuillez remplir tous les champs obligatoires';
          errorElement.style.position = 'fixed';
          errorElement.style.top = '20px';
          errorElement.style.left = '50%';
          errorElement.style.transform = 'translateX(-50%)';
          errorElement.style.backgroundColor = '#fff5f5';
          errorElement.style.color = '#e53e3e';
          errorElement.style.padding = '15px 25px';
          errorElement.style.borderRadius = '8px';
          errorElement.style.boxShadow = '0 4px 12px rgba(0,0,0,0.1)';
          errorElement.style.zIndex = '1000';
          errorElement.style.fontWeight = '600';
          errorElement.style.display = 'flex';
          errorElement.style.alignItems = 'center';
          errorElement.style.animation = 'fadeIn 0.3s ease';
          
          document.body.appendChild(errorElement);
          
          setTimeout(() => {
            errorElement.style.animation = 'fadeOut 0.5s ease';
            setTimeout(() => {
              document.body.removeChild(errorElement);
            }, 500);
          }, 3000);
        }
      });
    });
  </script>
</body>
</html>