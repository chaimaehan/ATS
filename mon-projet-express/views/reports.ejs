<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rapports</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Styles -->
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --accent: #4895ef;
            --light: #f8f9fa;
            --dark: #212529;
            --success: #4cc9f0;
            --warning: #f72585;
            --gray: #6c757d;
            --light-gray: #e9ecef;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        body {
            display: flex;
            min-height: 100vh;
            color: var(--dark);
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            line-height: 1.6;
        }

        /* MENU LATÃ‰RAL */
        .menu {
            position: fixed;
            top: 0; left: 0;
            width: 260px;
            height: 100vh;
            background: linear-gradient(to bottom, var(--primary), var(--secondary));
            color: white;
            padding: 30px 0;
            display: flex;
            flex-direction: column;
            box-shadow: 3px 0 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 0 25px 25px;
            margin-bottom: 25px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .logo i {
            font-size: 28px;
            color: var(--success);
        }
        .logo h1 {
            font-size: 22px;
            font-weight: 600;
        }
        .menu-links {
            display: flex;
            flex-direction: column;
            padding: 0 15px;
        }
        .menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px 20px;
            margin: 5px 0;
            border-radius: 8px;
            color: rgba(255, 255, 255, 0.85);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .menu a:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }
        .menu a.active {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .menu a i {
            width: 24px;
            text-align: center;
            font-size: 18px;
        }

        /* CONTENU PRINCIPAL */
        .content {
            flex: 1;
            max-width: 1200px;
            margin-left: 260px;
            padding: 40px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }
        .header h2 {
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 32px;
            color: var(--dark);
        }
        .header h2 i {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 60px; height: 60px;
            background: rgba(67, 97, 238, 0.1);
            border-radius: 50%;
            color: var(--primary);
        }
        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .user-info img {
            width: 50px; height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--light);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }
        .user-details h3 {
            font-size: 16px;
            font-weight: 600;
        }
        .user-details p {
            font-size: 14px;
            color: var(--gray);
        }

        /* REFRESH BUTTON */
        .refresh-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            background: var(--accent);
            color: white;
            padding: 10px 15px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }
        .refresh-btn:hover {
            background: var(--primary);
            transform: translateY(-2px);
        }

        /* RAPPORTS */
        .reports-section {
            background: white;
            border-radius: 16px;
            padding: 35px;
            margin-bottom: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }
        .reports-section h3 {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 22px;
            margin-bottom: 25px;
            color: var(--dark);
        }
        .reports-section h3 i {
            color: var(--accent);
        }
        .report-list {
            list-style: none;
        }
        .report-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            border-bottom: 1px solid var(--light-gray);
            transition: all 0.3s ease;
        }
        .report-item:last-child {
            border-bottom: none;
        }
        .report-item:hover {
            background: rgba(67, 97, 238, 0.03);
            border-radius: 10px;
            transform: translateY(-2px);
        }
        .report-details {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .report-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px; height: 50px;
            border-radius: 12px;
            font-size: 22px;
            color: white;
        }
        .report-1 .report-icon { background: linear-gradient(135deg, #ff9a9e, #fad0c4); }
        .report-2 .report-icon { background: linear-gradient(135deg, #a1c4fd, #c2e9fb); }
        .report-3 .report-icon { background: linear-gradient(135deg, #d4fc79, #96e6a1); }
        .report-info h4 {
            font-size: 18px;
            margin-bottom: 5px;
            color: var(--dark);
        }
        .report-info p {
            font-size: 14px;
            color: var(--gray);
        }
        .download-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            background: var(--primary);
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 500;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
            text-decoration: none;
        }
        .download-btn:hover {
            background: var(--secondary);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(67, 97, 238, 0.4);
            color: white;
        }
        .download-btn.loading {
            background: var(--gray);
            cursor: not-allowed;
        }
        .download-btn.success {
            background: #2ecc71;
        }

        /* FORMAT SELECTOR */
        .format-selector {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }
        .format-btn {
            padding: 5px 12px;
            background: var(--light-gray);
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.3s ease;
        }
        .format-btn:hover {
            background: var(--accent);
            color: white;
        }

        /* STATISTIQUES */
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
        }
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            display: flex;
            flex-direction: column;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .stat-title {
            font-size: 16px;
            color: var(--gray);
            font-weight: 500;
        }
        .stat-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px; height: 50px;
            border-radius: 12px;
            font-size: 24px;
            color: white;
        }
        .icon-1 { background: linear-gradient(135deg, #ff758c, #ff7eb3); }
        .icon-2 { background: linear-gradient(135deg, #6a11cb, #2575fc); }
        .icon-3 { background: linear-gradient(135deg, #f83600, #f9d423); }
        .stat-value {
            font-size: 32px;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 5px;
        }
        .stat-change {
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .positive { color: #2ecc71; }
        .negative { color: #e74c3c; }

        /* LOADING ANIMATION */
        .loading-spinner {
            width: 16px;
            height: 16px;
            border: 2px solid #ffffff;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* RESPONSIVE */
        @media (max-width: 992px) {
            .menu { width: 80px; }
            .menu .logo h1, .menu a span { display: none; }
            .menu .logo, .menu a { justify-content: center; }
            .content { margin-left: 80px; }
        }
        @media (max-width: 768px) {
            .content { padding: 25px; }
            .header { flex-direction: column; align-items: flex-start; gap: 20px; }
            .user-info { align-self: flex-end; }
            .stats { grid-template-columns: 1fr; }
        }
        @media (max-width: 576px) {
            .menu {
                width: 100%;
                height: auto;
                position: relative;
                flex-direction: row;
                padding: 15px;
            }
            .menu-links { flex-direction: row; gap: 10px; justify-content: center; flex: 1; }
            .logo { display: none; }
            .content { margin-left: 0; }
            .report-item { flex-direction: column; align-items: flex-start; gap: 15px; }
        }
    </style>
</head>
<body>
<!-- MENU LATÃ‰RAL -->
<div class="menu">
    <div class="logo">
        <i class="fas fa-chart-network"></i>
        <h1>DataVision</h1>
    </div>
    <div class="menu-links">
        <a href="/dashboard"><i class="fas fa-chart-line"></i> <span>Tableau de bord</span></a>
        <a href="/reports" class="active"><i class="fas fa-file-alt"></i> <span>Rapports</span></a>
        <a href="/candidates"><i class="fas fa-users"></i> <span>Candidats</span></a>
        <a href="/jobs"><i class="fas fa-briefcase"></i> <span>Offres</span></a>
    </div>
</div>

<!-- CONTENU -->
<div class="content">
    <div class="header">
        <h2><i class="fas fa-file-alt"></i> Rapports</h2>
        <div class="user-info">
            <button class="refresh-btn" onclick="refreshStats()">
                <i class="fas fa-sync-alt"></i> Actualiser
            </button>
        </div>
    </div>

    <!-- LISTE DES RAPPORTS -->
    <div class="reports-section">
        <h3><i class="fas fa-list"></i> Rapports disponibles</h3>
        <ul class="report-list">
            <li class="report-item report-1">
                <div class="report-details">
                    <div class="report-icon"><i class="fas fa-calendar-alt"></i></div>
                    <div class="report-info">
                        <h4>Rapport 1 : ActivitÃ© mensuelle</h4>
                        <p>DerniÃ¨re mise Ã  jour : <span id="monthly-date">Aujourd'hui</span> | Format : PDF</p>
                    </div>
                </div>
                <a href="/reports/download/monthly" class="download-btn" onclick="handleDownload(this, 'monthly')">
                    <i class="fas fa-download"></i> TÃ©lÃ©charger PDF
                </a>
            </li>
            <li class="report-item report-2">
                <div class="report-details">
                    <div class="report-icon"><i class="fas fa-chart-bar"></i></div>
                    <div class="report-info">
                        <h4>Rapport 2 : Performances</h4>
                        <p>DerniÃ¨re mise Ã  jour : <span id="performance-date">Aujourd'hui</span> | Format : Excel</p>
                    </div>
                </div>
                <a href="/reports/download/performance" class="download-btn" onclick="handleDownload(this, 'performance')">
                    <i class="fas fa-download"></i> TÃ©lÃ©charger Excel
                </a>
            </li>
            <li class="report-item report-3">
                <div class="report-details">
                    <div class="report-icon"><i class="fas fa-users"></i></div>
                    <div class="report-info">
                        <h4>Rapport 3 : Statistiques de recrutement</h4>
                        <p>DerniÃ¨re mise Ã  jour : <span id="recruitment-date">Aujourd'hui</span></p>
                        <div class="format-selector">
                            <button class="format-btn" onclick="downloadRecruitment('csv')">CSV</button>
                            <button class="format-btn" onclick="downloadRecruitment('json')">JSON</button>
                        </div>
                    </div>
                </div>
                <button class="download-btn" onclick="showFormatOptions(this)">
                    <i class="fas fa-download"></i> TÃ©lÃ©charger
                </button>
            </li>
        </ul>
    </div>

    <!-- STATISTIQUES -->
    <div class="stats">
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-title">Rapports gÃ©nÃ©rÃ©s</div>
                <div class="stat-icon icon-1"><i class="fas fa-file-contract"></i></div>
            </div>
            <div class="stat-value" id="reports-generated">
                <%= (stats && stats.estimatedReports) ? stats.estimatedReports : '10' %>
            </div>
            <div class="stat-change positive">
                <i class="fas fa-arrow-up"></i>
                <span id="reports-change">
                        <%= (stats && stats.candidatesChange) ? Math.abs(stats.candidatesChange) + '% ce mois-ci' : '5% ce mois-ci' %>
                    </span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-title">TÃ©lÃ©chargements</div>
                <div class="stat-icon icon-2"><i class="fas fa-cloud-download-alt"></i></div>
            </div>
            <div class="stat-value" id="downloads-count">
                <%= (stats && stats.totalDownloads) ? stats.totalDownloads : '5' %>
            </div>
            <div class="stat-change positive">
                <i class="fas fa-arrow-up"></i>
                <span id="downloads-change">
                        <%= (stats && stats.recentDownloads) ? stats.recentDownloads + ' cette semaine' : '2 cette semaine' %>
                    </span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-header">
                <div class="stat-title">Candidats total</div>
                <div class="stat-icon icon-3"><i class="fas fa-user-friends"></i></div>
            </div>
            <div class="stat-value" id="active-candidates">
                <%= (stats && stats.totalCandidates) ? stats.totalCandidates : '20' %>
            </div>
            <div class="stat-change <%= (stats && stats.recentCandidates > 0) ? 'positive' : 'neutral' %>">
                <i class="fas fa-<%= (stats && stats.recentCandidates > 0) ? 'arrow-up' : 'minus' %>"></i>
                <span id="candidates-change">
                        <%= (stats && stats.recentCandidates) ? stats.recentCandidates + ' ce mois-ci' : '20 ce mois-ci' %>
                    </span>
            </div>
        </div>
    </div>
</div>
<script src="/js/reports.js" defer></script>
</body>
</html>